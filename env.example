# Primary LLM Provider (groq, openai, gpt4all)
LLM_PROVIDER=groq

# Groq Configuration (Primary)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
# Note: llama-3.1-70b-versatile was decommissioned. Use llama-3.3-70b-versatile (current default)

# OpenAI Configuration (Secondary/Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Local GPT4All Configuration (Secondary/Fallback)
GPT4ALL_MODEL_PATH=C:\Users\Guill\AppData\Local\nomic.ai\GPT4All
GPT4ALL_MODEL_NAME=Nous-Hermes-2-Mistral-7B-DPO.Q4_0.gguf

# Image Generation Configuration (Phase 3)
IMAGE_PROVIDER=pollinations
# Pollinations.ai API Key (REQUIRED - free tier no longer supported)
# Get your API key at: https://enter.pollinations.ai
POLLINATIONS_API_KEY=your_pollinations_api_key_here
# For OpenAI DALL-E (optional, uses same OPENAI_API_KEY as LLM)
# IMAGE_PROVIDER=openai

# Background Removal Configuration
BG_REMOVAL_THRESHOLD=240
AUTOCROP_PADDING=10

# PDF Generation Configuration (Phase 4)
PDF_PAGE_SIZE=letter
PDF_MARGIN=10
PDF_HEADER_HEIGHT=50
PDF_FOOTER_HEIGHT=150
STICKER_ROTATION_MIN=-10
STICKER_ROTATION_MAX=10

# Timeout Configuration (Phase 5)
LLM_TIMEOUT=120
IMAGE_TIMEOUT=180

# Sticker Border Configuration (Phase 5)
ENABLE_STICKER_BORDER=false
STICKER_BORDER_WIDTH=3

# Art Direction Style Configuration
# Available styles: CLAYMATION, VINTAGE_SKETCH, FLAT_DESIGN, 3D_RENDERED, WATERCOLOR, LINE_ART
# Default: 3D_RENDERED (matches current behavior)
DEFAULT_ART_STYLE=3D_RENDERED

# Use Mock Providers (for testing without API keys)
# Set to "true" to use mock LLM and image providers (no API calls)
# Set to "false" or remove to use real providers
USE_MOCK_PROVIDER=false
